{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "internal/**/*",
    "internal/**/*.json",
    "scripts/**/*",
    "packages/theme-chalk/*",
    "packages/ss-ele/version.ts",
    "packages/ss-ele/package.json"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist", "**/lib"]
}
